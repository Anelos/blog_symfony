{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Articles list</h1>

            <table class="table table-stripped">
                <thead class="table-head">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Content</th>
                    <th>Tags</th>
                    <th>Published</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td><a href="{{ path('article_show', { 'slug': article.slug }) }}">{{ article.id }}</a></td>
                        <td>{{ article.title }}</td>
                        <td>{% if article.created %}{{ article.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if article.updated %}{{ article.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ article.content }}</td>
                        <td>
                            {% for tag in article.tags %}
                                {{ tag }}

                            {% endfor %}
                        </td>
                        <td>{% if article.published %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('article_show', { 'slug': article.slug }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('article_edit', { 'slug': article.slug }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <ul>
                <li>
                    <a href="{{ path('article_new') }}">Create a new article</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
