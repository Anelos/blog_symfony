{% block pagination %}
    {% set current_path = app.request.get('_route') %}

    {% if nbPage > 1 %}
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {% if page > 1 %}
                    <li>
                        <a href="{{ path( current_path, {'page': page - 1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% endif %}
                {% for i in 1..nbPage %}
                    <li
                            {% if i == page %}
                                class="active"
                            {% endif %}
                    >
                        <a href="{{ path( current_path, {'page': i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                {% if page < nbPage %}
                    <li>
                        <a href="{{ path( current_path, {'page': page + 1}) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}