{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .table > tbody > tr {
            cursor: pointer;
        }
        .table > tbody > tr > td {
            vertical-align: middle;
        }
        .table > tbody > tr > td > a {
            text-decoration: none;
            color: #414141;
        }

        .table > tbody > tr > td > div {
            height: 75px;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .table img {
            width: 75px;
        }

    </style>

{% endblock %}
{% block body %}
    <div class="container">
        <h1>Users list</h1>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Alias</th>
                <th>Avatar</th>
                <th>Description</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birthday</th>
                <th>Gender</th>
                <th>Country</th>
                <th>Privacy</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr data-href="{{ path('user_show', { 'slug': user.slug }) }}">
                    <td><a href="{{ path('user_show', { 'slug': user.slug }) }}"><strong>{{ user.pseudonym }}</strong></a></td>
                    <td><img src="{{ asset( user.avatar ) }}" alt="user avatar"></td>
                    <td>
                        <div>{{ user.description }}</div>
                    </td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{% if user.birthday %}{{ user.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.country }}</td>
                    <td>{% if user.privacy %}Yes{% else %}No{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('document').ready(function () {
            $('*[data-href]').on("click", function () {
                window.location = $(this).data('href');
                return false;
            });
            $("td > a").on("click", function (e) {
                e.stopPropagation();
            });
        })
    </script>
{% endblock %}